<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFFF5"
    tools:context=".MusteriIlanlarimActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İLANLARIM"
        android:background="#D1DBBD"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/musteriIlanlarRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:layout_above="@+id/backButton" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#193441"
        android:textColor="#E1B5B5"
        android:text="Geri Dön" />

</RelativeLayout>

