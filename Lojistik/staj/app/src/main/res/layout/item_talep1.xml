<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/talepEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: " />
    <TextView
        android:id="@+id/talepNereden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nereden: " />

    <TextView
        android:id="@+id/talepNereye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nereye: " />

    <TextView
        android:id="@+id/talepOlculer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ölçüler: " />

    <TextView
        android:id="@+id/talepFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiyat: " />

    <TextView
        android:id="@+id/talepTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarih: " />

    <Button
        android:id="@+id/btnOnayla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#8BC34A"
        android:text="Onayla" />

    <Button
        android:id="@+id/btnReddet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F43535"
        android:text="Reddet" />
</LinearLayout>

